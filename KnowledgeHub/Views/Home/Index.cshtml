@model IEnumerable<CategoryServiceModel>

@{ ViewBag.Title = "Home"; }

<div class="text-center">
    <h1 class="display-4">Welcome to KnowledgeHub!</h1>
    <h2>Pick a category, and start learning today, or become a lector, and spread your knowledge!</h2>
</div>

@if (ViewBag.UserIsLogged)
{
    <a asp-controller="Course" asp-action="Create" class="btn btn-primary btn-block" role="button">Create New Course</a>
}

<a asp-area="" asp-controller="Course" asp-action="All" class="display-4 text-dark nav-link" >
    <div class="jumbotron jumbotron-fluid" style="background-color:lightblue">
        <div class="container">
            <h1 class="display-4">All</h1>
            <p class="lead">Browse all courses.</p>
        </div>
    </div>
</a>

@foreach (var category in @Model)
{
    <a asp-area="" asp-controller="Course" asp-action="All" asp-route-category="@category.Name" class="display-4 text-dark nav-link">
        <div class="jumbotron jumbotron-fluid" style="background-color:lightblue">
            <div class="container">
                <h1 class="display-4">@category.Name</h1>
                <p class="lead">@category.Description</p>
            </div>
        </div>
    </a>
}