@model VideoAddFormModel

<form method="post">
    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" type="text" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="TopicId">Topic</label>
        <select asp-for="TopicId" class="form-control">
            @foreach (var topic in Model.Topics)
            {
                <option value="@topic.Id">@topic.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label asp-for="Url">URL</label>
        <input asp-for="Url" type="text" class="form-control">
    </div>

    <input class="btn btn-primary mt-3" type="submit" value="Save" />
</form>